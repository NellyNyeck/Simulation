{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"description": "input description format",
	"type": "object",

	"definitions":{
		"node":{
			"type":"object",
			"properties": {
				"name":{"type":"string"},
				"coordinates": {"type":"object",
								"properties":{
									"type":{"type":"string"},
									"first coordinate":{"type":"number"},
									"second coordinate":{"type":"number"}
								},
								"required":["first coordinate","second coordinate"]
								},		
				"is poi":{"type":"boolean"},
				"labels":{"type":"array",
							"items":{"type":"string"},
							"minItems":1,
							"uniqueItems":true
						}
				},
			"required":["name","coordinates"],
			"dependencies": {
				"is poi":["labels"]
			}
		},
		"provider":{
			"type":"object",
			"properties": {
				"name": { "type":"string"},
				"colour":{ "type":"string" },
				"depots":{"type":"array",
							"items":{"type":"node"},
							"minItems":1,
							"uniqueItems":true
						},
				"pods":{"type":"array",
						"items":{"type":"pod"},
						"minItems": 1,
						"maxItems":"available pods",
						"uniqueItems": true
						},
				"maximum number of customers":{"type":"integer"},
				"maximum outgoing pods/time unit":{"type":"number"},
				"solver":{"type":"object"},
				"poi selection function":{
					"type":"object",
					"properties":{
						"name":  {"type":"string"},
						"parameters": {"type":"array",
							"items":{"type":"object",
								"properties":{
									"name": {"type": "string"},
									"value": {"type":"number"}
								}
							},
							"minItems": 1,
							"maxItems": 3,
							"uniqueItems":true
						}
					},
					"required":["name", "parameters"]
				}
				
			},
			"required":["name","colour","depots","available pods","maximum number of customers","maximum outgoing pods/time unit","poi selection function"]
		},
		"edge":{
			"type":"object",
			"properties": {
				"name": {"type":"string"},
				"from": { "type":"string"},
				"to":{ "type":"string" },
				"weight": {"type":"number", "default":1},
				"poi distribution function": {"type":"object",
												"properties":{
													"name":  {"type":"string"},
													"parameters": {"type":"array",
																	"items":{"type":"object",
																		"properties":{
																			"name": {"type": "string"},
																			"value": {"type":"number"}
																		}
																	},
																	"minItems": 1,
																	"maxItems": 3,
																	"uniqueItems":true
																	}
												},
												"required":["name", "parameters"]
											},
				"provider": { "type":"provider"}
			},
			"required":["name","from","to"]
		},
		"strategy":{
			"type":"object",
			"properties": {
				"name": { "type":"string"}
			},
			"required":["name"]
		},
		"pod":{
			"type":"object",
			"properties": {
				"id":{"type":"string"},
				"capacity": { "type":"integer", "default":1},
				"provider":{ "type":"string" },
				"strategy":{"type":"strategy"},
				"max acceleration":{"type":"number"},
				"max deceleration":{"type":"number"},
				"max speed":{"type":"number"}
			},
			"required":["id","capacity","strategy","provider","max acceleration","max deceleration", "max speed"]
		},
		"vehicle":{
			"type":"object",
			"properties": {
				"id":{"type":"string"},
				"type": { "type":"string"},
				"starting point":{"type":"node"},
				"exit point":{"type":"node"},
				"max acceleration":{"type":"number"},
				"max deceleration":{"type":"number"},
				"max speed":{"type":"number"}
			},
			"required":["id","starting point","exit point","type","max acceleration","max deceleration", "max speed"]
		},
		"human":{
			"type":"object",
			"properties": {
				"name":{"type":"string"},
				"starting point":{"type":"node"},
				"exit point":{"type":"node"},
				"max acceleration":{"type":"number"},
				"max deceleration":{"type":"number"},
				"max speed":{"type":"number"}
			},
			"required":["name","starting point","exit point","max acceleration","max deceleration", "max speed"]
		},
		"bike":{
			"type":"object",
			"properties": {
				"id":{"type":"string"},
				"starting point":{"type":"node"},
				"exit point":{"type":"node"},
				"max acceleration":{"type":"number"},
				"max deceleration":{"type":"number"},
				"max speed":{"type":"number"}
			},
			"required":["id","starting point","exit point","max acceleration","max deceleration", "max speed"]
		},
		"agent":{
			"type":{"type":"object",
					"anyOf":[
						{"type":"pod"},
						{"type":"vehicle"},
						{"type":"human"},
						{"type":"bike"}
					]
			}
		},
		"environment":{
			"type":"object",
			"properties": {
				"nodes": {
				},
				"edges": { 
				}
			},
			"required":["nodes","edges"]
		},
		"simulation specifications":{
			"type":"object",
			"properties": {
				"number of waiting clients": { "type":"integer", "default":1},
				"number of vehicles":{"type":"integer"},
				"number of humans":{"type":"integer"},
				"number of bikes":{"type":"integer"},
				"time unit":{"type":"string"},
				"speed unit":{"type":"string"},
				"length unit":{"type":"string"}
			},
			"required":["number of waiting clients", "time unit", "speed unit", "length unit"]
		}
	}
}