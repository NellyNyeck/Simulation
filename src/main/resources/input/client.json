{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "the structure of a provider in this simulation environment",
  "type": "object",
  "extends" :  {
    "$ref" : "static.json"
  },
  "properties": {
    "agent-type": {
      "type": "string",
      "default": "client"
    },
    "location" : {
      "type": "object",
      "$ref" : "node.json"
    },
    "labels" : {
      "type" : "array",
      "items" :
      {
        "type" : "string"
      }
    }
  },
  "required" : [
    "agent-type",
    "location"
  ]
}