{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "the structure of a client in this simulation environment",
  "type": "object",
  "properties": {
    "name": {
      "type":"string"
    },
    "agent-type": {
      "type": "string",
      "default": "client"
    },
    "location":{
      "type":"object",
      "$ref":"node.json"
    },
    "labels" : {
      "type" : "array",
      "items" :
      {
        "type" : "string"
      }
    }
  },
  "required" : [
    "name",
    "filename",
    "agent-type",
    "location"
  ]
}