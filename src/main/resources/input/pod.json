{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "description" : "the pod structure",
  "type" : "object",
  "extends" : {
    "$ref" : "movable.json"
  },
  "properties" : {
    "agent-type" : {
      "type" : "string",
      "default" : "pod"
    },
    "capacity" : {
      "type" : "integer",
      "default" : 1
    },
    "provider" : {
      "type" : "string"
    }
  },
  "required" : [
    "agent-type",
    "capacity",
    "provider"
  ]
}