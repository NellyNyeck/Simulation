{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "description" : "the structure of a provider in this simulation environment",
  "type" : "object",
  "properties" : {
    "name":{
      "type" : "string"
    },
    "filename":{
      "type":"string"
    },
    "agent-type" : {
      "type" : "string",
      "default" : "provider"
    },
    "colour" : {
      "type" : "string"
    },
    "depots" : {
      "type" : "array",
      "items" : {
        "type" : "object",
        "$ref" : "node.json"
      },
      "minItems" : 1,
      "uniqueItems" : true
    },
    "available-pods" : {
      "type" : "integer",
      "minimum":1
    },
    "pods" : {
      "type" : "array",
      "items" : {
        "type" : "object",
        "$ref" : "pod.json"
      },
      "minItems" : 1,
      "uniqueItems" : true
    },
    "maximum number of customers" : {
      "type" : "integer"
    },
    "maximum outgoing pods/time unit" : {
      "type" : "number"
    },
    "poi selection function" : {
      "type" : "object",
      "$ref" : "function.json"
    }
  },
"required" :["name", "filename", "agent-type", "colour", "depots", "available-pods", "maximum number of customers","maximum outgoing pods/time unit", "poi selection function"]
}