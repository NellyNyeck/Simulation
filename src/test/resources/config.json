{
	"definitions":{
		"gps":{
			"type":"object",
			"proprieties":{
				"degree": {"type":"number"},
				"minute": {"type":"number"},
				"second": {"type":"number"}
			},
			"required":["degree","minute","second"]
		},
		"node":{
			"type":"object",
			"properties": {
				"id": { "type":"string"},
				"coordinates": {"type":"object",
								"oneOf":[
									{"type":"object",
										"properties":{
											"real":{"type":"boolean"},
											"latitude":{"type":"gps"},
											"longitude":{"type":"gps"}
										},
										"required":["real", "latitude","longitude"]
									},
									{"type":"object",
										"properties":{
											"fake":{"type":"boolean"},
											"x":{"type":"number"},
											"y":{"type":"number"}
										},
										"required":["fake", "x","y"]
									}
								]
								},		
				"is poi":{"type":"boolean"},
				"labels":{"type":"array",
							"items":{"type":"string"},
							"minItems":1,
							"uniqueItems":true
						}
				},
			"required":["id","coordinates"],
			"dependencies": {
				"is poi":["labels"]
			}
		},
		"provider":{
			"type":"object",
			"properties": {
				"name": { "type":"string"},
				"colour":{ "type":"string" },
				"depots":{"type":"array",
							"items":{"type":"node"},
							"minItems":1,
							"uniqueItems":true
						},
				"available pods":{"type":"integer"},
				"pods":{"type":"array",
						"items":{"type":"pod"},
						"minItems": 1,
						"maxItems":"available pods",
						"uniqueItems": true
						},
				"maximum number of customers":{"type":"integer"},
				"maximum outgoing pods/time unit":{"type":"number"},
				"solver":{"type":"object"},
				"poi selection function":{"type":"distribution"}
				
			},
			"required":["name","colour","depots","available pods","maximum number of customers","maximum outgoing pods/time unit","poi selection function"]
		},
		"edge":{
			"type":"object",
			"properties": {
				"id": {"type":"object",
						"properties":{
							"name":{"type":"string"},
							"lane":{"type":"integer"}
						},
						"required":["name"]
					},
				"from": { "type":"node"},
				"to":{ "type":"node" },
				"weight": {"type":"number", "default":1},
				"poi distribution function": {"type":"object",
												"properties":{
													"name":  {"type":"string"},
													"input data": {"type":"array",
																	"items":{"type":"number"},
																	"minItems": 1,
																	"maxItems": 3
																	}
												},
												"required":["name"]
											},
				"provider": { "type":"provider"}
			},
			"required":["from","to"]
		},
		"strategy":{
			"type":"object",
			"properties": {
				"name": { "type":"string"}
			},
			"required":["name"]
		},
		"pod":{
			"type":"object",
			"properties": {
				"id":{"type":"string"},
				"capacity": { "type":"integer", "default":1},
				"provider":{ "type":"provider" },
				"strategy":{"type":"strategy"}
			},
			"required":["id","capacity","strategy","provider"]
		},
		"vehicle":{
			"type":"object",
			"properties": {
				"id":{"type":"string"},
				"type": { "type":"string"},
				"starting point":{"type":"node"},
				"exit point":{"type":"node"}
			},
			"required":["id","type"]
		},
		"human":{
			"type":"object",
			"properties": {
				"name":{"type":"string"},
				"starting point":{"type":"node"},
				"exit point":{"type":"node"}
			},
			"required":["name"]
		},
		"bike":{
			"type":"object",
			"properties": {
				"id":{"type":"string"},
				"starting point":{"type":"node"},
				"exit point":{"type":"node"}
			},
			"required":["id"]
		},
		"agent":{
			"type":{"type":"object",
					"anyOf":[
						{"type":"pod"},
						{"type":"vehicle"},
						{"type":"human"},
						{"type":"bike"}
					]
			}
		},
		"environment":{
			"type":"object",
			"properties": {
				"nodes": { "type":"array",
					"items": { "type": "node"},
					"minItems": 2,
					"uniqueItems": true
				},
				"edges": { "type":"array",
					"items": { "type": "edge"},
					"minItems": 1,
					"uniqueItems": true
				}
			},
			"required":["nodes","edges"]
		},
		"agents":{"type":"array",
					"items":{"type":"agent"},
					"uniqueItems":true
		},
		"simulation specifications":{
			"type":"object",
			"properties": {
				"number of waiting clients": { "type":"integer", "default":1},
				"clients selection function": {"type":"distribution"},
				"clients to provider distribution function":{"type":"distribution"},
				"number of pods":{"type":"integer", "default":1 },
				"number of vehicles":{"type":"integer"},
				"number of humans":{"type":"integer"},
				"number of bikes":{"type":"integer"},
				"number of providers":{"type":"integer", "default":1 }
			},
			"required":["number of waiting clients","clients selection function","number of pods","number of providers"]
		}
	}
}

